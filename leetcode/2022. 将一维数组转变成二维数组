class Solution {
    public int[][] construct2DArray(int[] original, int m, int n) {
        if (original.length != m * n) {
            return new int[0][0];
        }
        int[][] arr = new int[m][n];
        for (int i = 0; i < original.length; i++) {
            arr[i / n][i % n] = original[i];
        }
        return arr;
    }
}

class Solution {
    public int[][] construct2DArray(int[] original, int m, int n) {
        if (original.length != m * n) {
            return new int[0][0];
        }
        int[][] arr = new int[m][n];
        for (int i = 0; i < original.length; i+=n) {
            System.arraycopy(original,i,arr[i/n],0,n);
        }
        return arr;
    }
}