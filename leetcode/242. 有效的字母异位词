class Solution {
    public boolean isAnagram(String s, String t) {
        int[] arr = new int[26];
        for (int i = 0;i < s.length(); i++) {
            char ch = s.charAt(i);
            arr[ch - 97]++;
        }
        for (int j = 0; j < t.length(); j++) {
            char ch = t.charAt(j);
            arr[ch - 97]--;
        }
        for (int x : arr) {
            if (x != 0) {
                return false;
            }
        }
        return true;
    }
}